{
  "name": "react-markdown",
  "description": "Renders Markdown as React components",
  "version": "1.0.5",
  "keywords": [
    "commonmark",
    "markdown",
    "react",
    "react-component"
  ],
  "main": "src/react-markdown.js",
  "scripts": {
    "build": "NODE_ENV=production webpack",
    "coverage": "istanbul cover node_modules/.bin/_mocha -- --reporter spec",
    "deploy": "gh-pages-deploy",
    "lint": "eslint .",
    "prepublish": "npm prune && npm test && npm run build",
    "pretest": "npm run lint",
    "test": "mocha --reporter spec",
    "test-travis": "istanbul cover node_modules/.bin/_mocha --report lcovonly -- --reporter spec",
    "watch": "webpack --watch"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:rexxars/react-markdown.git"
  },
  "author": "Espen Hovlandsdal <rexxars@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^5.4.3",
    "babel-loader": "^5.1.2",
    "chai": "^3.4.0",
    "eslint": "^1.7.3",
    "eslint-config-vaffel": "^3.0.0",
    "eslint-plugin-react": "^3.6.3",
    "gh-pages-deploy": "^0.3.0",
    "istanbul": "^0.4.0",
    "jsdom": "^7.0.1",
    "mocha": "^2.2.5",
    "mocha-jsdom": "^1.0.0",
    "node-libs-browser": "^0.5.0",
    "react": "^0.14.0",
    "react-addons-test-utils": "^0.14.0",
    "react-dom": "^0.14.0",
    "react-textarea-autosize": "^2.2.1",
    "webpack": "^1.9.7"
  },
  "gh-pages-deploy": {
    "noprompt": true,
    "prep": [
      "build"
    ],
    "staticpath": "demo/dist"
  },
  "dependencies": {
    "commonmark": "^0.19.0",
    "commonmark-react-renderer": "^2.0.0"
  },
  "peerDependencies": {
    "react": ">=0.13.3"
  }
}
